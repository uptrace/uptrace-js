{
  "name": "@uptrace/core",
  "version": "0.4.1",
  "description": "Uptrace JS core",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uptrace/uptrace-js.git",
    "directory": "packages/uptrace-core"
  },
  "scripts": {
    "test": "nyc ts-mocha -p tsconfig.json test/**/*.test.ts",
    "test:browser": "nyc karma start --single-run",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json -p ../../",
    "codecov:browser": "nyc report --reporter=json && codecov -f coverage/*.json -p ../../",
    "build": "yarn run compile",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "precompile": "tsc --version",
    "version:update": "node ../../scripts/version-update.js",
    "compile": "rm -rf ./build && yarn run version:update && tsc -p .",
    "docs-test": "linkinator docs/out --silent",
    "docs": "typedoc --tsconfig tsconfig.json --exclude test/**/*.ts",
    "prepare": "yarn run compile",
    "watch": "tsc -w"
  },
  "keywords": [
    "opentelemetry",
    "nodejs",
    "browser",
    "tracing",
    "profiling",
    "metrics",
    "stats",
    "monitoring",
    "uptrace"
  ],
  "author": "Uptrace Authors",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.js.map",
    "build/src/**/*.d.ts",
    "doc",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@opentelemetry/api": "^0.17.0",
    "@opentelemetry/core": "^0.17.0",
    "@opentelemetry/instrumentation": "^0.17.0",
    "@opentelemetry/tracing": "^0.17.0",
    "cross-fetch": "^3.0.6"
  },
  "devDependencies": {
    "@types/mocha": "8.2.1",
    "@types/node": "14.14.31",
    "@types/sinon": "9.0.10",
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "eslint": "7.20.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "gts": "3.1.0",
    "mocha": "8.3.0",
    "nyc": "15.1.0",
    "sinon": "9.2.4",
    "ts-mocha": "8.0.0",
    "typescript": "4.1.5"
  }
}
