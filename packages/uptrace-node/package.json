{
  "name": "@uptrace/node",
  "version": "2.0.0",
  "description": "Uptrace JS exporter for Node.js",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uptrace/uptrace-js.git",
    "directory": "packages/uptrace-node"
  },
  "scripts": {
    "test": "nyc ts-mocha -p tsconfig.json test/**/*.test.ts",
    "test:browser": "nyc karma start --single-run",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json -p ../../",
    "codecov:browser": "nyc report --reporter=json && codecov -f coverage/*.json -p ../../",
    "build": "pnpm run compile",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "precompile": "tsc --version",
    "version:update": "node ../../scripts/version-update.js",
    "compile": "rm -rf ./build && pnpm run version:update && tsc -p .",
    "docs-test": "linkinator docs/out --silent",
    "docs": "typedoc --tsconfig tsconfig.json --exclude test/**/*.ts",
    "prepare": "pnpm run compile",
    "watch": "tsc -w"
  },
  "keywords": [
    "opentelemetry",
    "nodejs",
    "browser",
    "tracing",
    "profiling",
    "metrics",
    "stats",
    "monitoring",
    "uptrace"
  ],
  "author": "Uptrace Authors",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.js.map",
    "build/src/**/*.d.ts",
    "doc",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@opentelemetry/api": "~1.9.0",
    "@opentelemetry/api-logs": "~0.203.0",
    "@opentelemetry/auto-instrumentations-node": "~0.62.0",
    "@opentelemetry/core": "~2.0.1",
    "@opentelemetry/exporter-logs-otlp-http": "~0.203.0",
    "@opentelemetry/exporter-metrics-otlp-http": "~0.203.0",
    "@opentelemetry/exporter-trace-otlp-http": "~0.203.0",
    "@opentelemetry/id-generator-aws-xray": "~2.0.0",
    "@opentelemetry/otlp-exporter-base": "~0.203.0",
    "@opentelemetry/sdk-logs": "~0.203.0",
    "@opentelemetry/sdk-metrics": "~2.0.1",
    "@opentelemetry/sdk-node": "~0.203.0",
    "@opentelemetry/sdk-trace-base": "~2.0.1",
    "@opentelemetry/baggage-span-processor": "~0.4.0",
    "@opentelemetry/semantic-conventions": "~1.36.0",
    "@uptrace/core": "workspace:*"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "24.0.14",
    "@types/sinon": "17.0.4",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "eslint": "9.31.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.5.1",
    "gts": "6.0.2",
    "mocha": "11.7.1",
    "nyc": "17.1.0",
    "sinon": "21.0.0",
    "ts-mocha": "11.1.0",
    "typescript": "5.8.3"
  }
}
